<% include ../../admin/block/head %>
  <!-- container section start -->

    <% include ../../admin/block/header %>

    <% include ../../admin/block/menuLeft %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <section id="main-content">
      <section class="wrapper">
          <div class="row">
              <div class="col-sm-2">
              </div>
              <div class="col-sm-8">
                  <section class="panel">
                    <form method="POST" action="">
                      <br>

                      <strong>Chọn mức độ </strong>
                      <select name="level" required class="form-control input-text"><br>
                        <% level.forEach(function(val,key){%>
                          <option value="<%=val.idLevel%>"> <%=val.Loai%></option>    
                        <% }) %>                    
                        </select><br>
                      <strong >Nội dung câu hỏi</strong>
                      <textarea class="form-control input-text" name="cauhoi"></textarea>
                      <br>
                        <div class="col-lg-12 col-sm-12 wow fadeInUp delay-05s">
                          <h4 style=" float: right;color: red; "> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Đáp án đúng : </h4>
                          <div style="clear: both;"></div>
                          <div class="form-group">
                              <input type="text" class="form-control input-text" style="width: 80% ; float: left;" name="traloi1" placeholder="Đáp án 1" required/>
                              <input value="1" style="width: 19%; height: 25px ; margin-top: 2% ; float: left;" type="radio" name="dapan">
                          </div>
                          <div class="form-group">
                              <input type="text" class="form-control input-text" style="width: 80% ; float: left;" name="traloi2" placeholder="Đáp án 2" required />
                              <input value="2" style="width: 19%; height: 25px ; margin-top: 2% ; float: left;" type="radio" name="dapan">
                          </div>
                          <div class="form-group">
                              <input type="text" class="form-control input-text" style="width: 80% ; float: left;" name="traloi3" placeholder="Đáp án 3" required />
                              <input value="3" style="width: 19%; height: 25px ; margin-top: 2% ; float: left;" type="radio" name="dapan">
                          </div>
                          <div class="form-group">
                              <input type="text" class="form-control input-text" style="width: 80% ; float: left;" name="traloi4" placeholder="Đáp án 4" required />
                              <input value="4" style="width: 19%; height: 25px ; margin-top: 2% ; float: left;" type="radio" name="dapan">
                          </div>  
                        </div>
                        <input type="hidden" name="idTracNghiem" value="<%=idTracNghiem%>">
                      <div class="text-center">
                        <button type="submit" class="btn btn-success">Thêm</button>
                      </div>
                    </form>
                  </section>
              </div>
          </div>
      </section>
    </section>
<% include ../../admin/block/footer %>
