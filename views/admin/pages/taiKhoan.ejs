<section id="main-content">
        <section class="wrapper">
                  <div class="row">
                  <h2 style="text-align: center;">THÔNG TIN TÀI KHOẢN</h2>
                  </div>
                  <div>
                    <% if(success_msg){ %>
                      <h3 style="color: red"><%=success_msg%></h3>
                    <% } %>
                  </div>
                <form action="" method="POST" enctype="multipart/form-data">
                  <div class="row">
                  	<div class="col-md-3">
                  		<img src="../../images/<%=data.HinhNV%>" alt=""><hr>
                  		<input type="file" name="hinh" placeholder="">
                  	</div>

                  	<div class="col-md-9" style="background: #fafafa">                  	
                  		<table>
                  		    <tr style="margin: 2% !important;">
                  		    	<th style="width: 30;text-align: center;">Họ Tên</th>
                  		    	<td style="width: 450px"> <input class="form-control" type="text" name="ten" value="<%=data.HoTen%>" required> </td>
                  		    </tr>
                  			<tr>
                  		    	<th style="width: 30%;text-align: center;">Email</th>
                  		    	<td> <input class="form-control" type="text" name="" value="<%=data.Email%>" disabled> </td>
                  		    </tr>
                  		    <tr>
                  		    	<th style="width: 30%;text-align: center;">Ngày Sinh <br><span id="errorDate" style="color: red"></span></th>
                  		    	<td> <input class="form-control" type="text" name="ngaysinh" value="<%=data.NgaySinh%>" id="datepicker" required> </td>
                  		    </tr>
                  		    <tr>
                  		    	<th style="width: 30%;text-align: center;">Phone</th>
                  		    	<td> <input minlength="10" maxlength="11" class="form-control" type="text" name="phone" value="<%=data.Phone%>" required> </td>
                  		    </tr>
                  		    <tr>
                  		    	<th style="width: 30%;text-align: center;">Địa chỉ</th>
                  		    	<td> <input class="form-control" type="text" name="diachi" value="<%=data.DiaChi%>" required> </td>
                  		    </tr>
                  		    <tr>
                  		    	<th style="width: 30%;text-align: center;">Giới tính</th>
                  		    	<td> 
                  		    	<select name="gioitinh" class="form-control">
                  		    		<option <%if(data.GioiTinh == 0){%>selected<%}%> value="0"> Nữ </option>
                  		    		<option <%if(data.GioiTinh == 1){%>selected<%}%> value="1"> Nam </option>
                  		    	</select>
                  		    	</td>
                  		    </tr>
                  		    <tr>
                  		    	<th style="width: 30%;text-align: center;"> Giới Thiệu </th>
                  		    	<td>
                  		    		<textarea class="form-control" name="gioithieu"><%=data.GioiThieu%></textarea>
                  		    	</td>
                  		    </tr>
                  		</table>
                  		<hr>
                  		<div align="center">
                  			<button id="submit" class="btn btn-success"> Cập Nhật </button>
                        <a href="/admin/doi-mat-khau"><button type="button" class="btn btn-success"> Đổi mật khẩu </button></a>
                  		</div>
                  		<hr>                  	
                  	</div>
                  </div>
                 </form>
        </section>
</section>


