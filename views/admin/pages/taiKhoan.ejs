<script>
  $( function() {
    $( "#datepicker" ).datepicker({
        dateFormat: "dd-mm-yy",
        maxDate: "-340m"
    });
    function checkDate(){
        ngaysinh = (new Date($('input[name="ngaysinh"]').val()).getFullYear());
        date = (new Date().getFullYear())

        if( (date - ngaysinh) < 10 || isNaN(ngaysinh) ){
            $('#errorDate').html('Ngày sinh không hợp lệ');
            return false;
        }  
        return true;
    }
  });

</script>
    <style>
    	tr{
