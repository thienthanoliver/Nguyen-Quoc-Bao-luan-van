    <div class="container">
        <div class="row">
            <h2>thông tin tài khoản</h2>
        </div><hr>
    <form action="" method="POST">
        <div class="row" >
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <% if(success_msg){ %>
                        <h3 style="color: red"><%=success_msg%></h3>
                <% } %>
                <strong>Họ Tên :</strong>
                <input type="text" name="hoten" value="<%=data[0].HoTen%>" class="form-control">
                <strong>Email :</strong> 
                <input value="<%=data[0].Email%>" class="form-control" disabled>
                <strong>Phone :</strong>
                <input type="text" name="phone" value="<%=data[0].Phone%>" class="form-control">
                <strong>Địa chỉ :</strong> 
                <input type="text" name="diachi" value="<%=data[0].DiaChi%>" class="form-control">
