                </select>
            </div>
        </div>
        <br>
                <input type="hidden" name="id" value="<%=data[0].idUser%>">
        <div class="row" align="center">
            <a href="/tai-khoan" title=""><button type="button" class="btn btn-success"> Quay Lại </button></a> <button class="btn btn-success" type="submit"> Cập Nhật </button>
        </div>
